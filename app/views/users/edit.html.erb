<%= form_for :useredit, url: '/users/modify' do |f| %>

    <div class="row">
      <div class="col-md-2">
        <%= f.label :oldpass, 'Old password' %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :oldpass, placeholder: 'Enter your old password' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :password, 'New password' %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password, placeholder: 'Enter your new password' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.label :password_confirmation, 'Retype new password' %>
      </div>
      <div class="col-md-3">
        <%= f.password_field :password_confirmation, placeholder: 'Enter your new password again' %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-2">
        <%= f.submit 'Change password' %>
      </div>
    </div>
<% end %>