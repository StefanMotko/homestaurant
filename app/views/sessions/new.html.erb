<h1>Log in</h1>
<%= form_for :session, url: login_path do |f| %>

    <div class="margin-panel">
      <div class="row margin-panel-row">
        <div class='col-xs-2'>
          <%= f.label :email, 'E-mail address' %>
        </div>
        <div class='col-xs-2 text-center'>
          <%= f.email_field :email %>
        </div>
      </div>


      <div class="row margin-panel-row">
        <div class='col-xs-2'>
          <%= f.label :password %>
        </div>
        <div class='col-xs-2 text-center'>
          <%= f.password_field :password %>
        </div>
      </div>

      <div class="row margin-panel-row">
        <div class='col-xs-2'></div>
        <div class="col-xs-2">
          <%= f.submit 'Log in', class: 'btn btn-primary center-block' %>
        </div>
      </div>
    </div>

<% end %>
